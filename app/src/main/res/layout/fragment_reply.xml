<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dark_background"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".ComposeActivity">


    <Button
        android:id="@+id/btnReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/twitter_blue"
        android:text="@string/reply"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        android:src="@drawable/ic_vector_close"
        app:tint="@color/twitter_blue" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:hint="What's on your mind?"
        android:padding="0dp"
        android:textColorHint="@color/inline_action"
        app:boxBackgroundColor="@color/dark_background"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxStrokeColor="#00FFFFFF"
        app:boxStrokeErrorColor="#00FFFFFF"
        app:counterEnabled="true"
        app:counterMaxLength="140"
        app:counterOverflowTextColor="@color/medium_red"
        app:counterTextColor="@android:color/white"
        app:errorTextColor="@color/medium_red"
        app:helperTextTextColor="@android:color/white"
        app:hintTextColor="@color/inline_action"
        app:placeholderTextColor="@color/inline_action">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etReply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="top|left"
            android:lines="5"
            android:textColor="@android:color/white"
            android:textColorHighlight="@color/inline_action"
            android:textColorHint="@color/inline_action"
            android:textColorLink="@color/inline_action"
            tools:ignore="DuplicateIds" />
    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>